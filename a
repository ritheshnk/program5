#include<stdio.h>
#include<conio.h>
void main() {
  int i = 0, n, temp = 0;
  printf("Please give a number as input : ");
  scanf("%d", & n);
  for (i = 2; i <= (n / 2); i++) {
    if (n % i == 0) {
      temp = 1;
      break;
    }
  }
  if (temp == 1)
    printf("Given number is not a prime number");
  else
    printf("Given number is a prime number");
  getch();
}
